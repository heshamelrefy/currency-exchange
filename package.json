{
    "name": "client",
    "version": "2.1.1",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production --aot --build-optimizer",
        "prod:stats": "ng build --configuration production --aot --build-optimizer --stats-json",
        "prod:details": "webpack-bundle-analyzer ./dist/client/stats.json",
        "deploy:firebase": "firebase deploy",
        "test": "ng test",
        "format": "prettier --single-quote --trailing-comma all --print-width 120 --arrow-parens always --tab-width 4 --write",
        "tslint": "tslint \"src/**/*.ts\"",
        "lint": "ng lint \"src/**/*.ts\"",
        "update": "ng update @angular/cli @angular/core",
        "update:cli": "ng update @angular/cli",
        "update:core": "ng update @angular/core",
        "e2e": "ng e2e",
        "resources": "node resources/generate-resources.js",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "npm run format",
            "npm run tslint",
            "git add"
        ],
        "src/**/*.scss": [
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ofcyln/currency-exchange.git"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.3.5",
        "@angular/cdk": "^15.2.9",
        "@angular/common": "^17.3.5",
        "@angular/compiler": "^17.3.5",
        "@angular/core": "^17.3.5",
        "@angular/forms": "^17.3.5",
        "@angular/material": "^15.2.9",
        "@angular/platform-browser": "^17.3.5",
        "@angular/platform-browser-dynamic": "^17.3.5",
        "@angular/router": "^17.3.5",
        "@angular/service-worker": "^17.3.5",
        "@ngx-translate/core": "^15.0.0",
        "@ngx-translate/http-loader": "^8.0.0",
        "bootstrap": "^5.3.3",
        "core-js": "^2.6.9",
        "currency-symbol-map": "^4.0.4",
        "inquirer-autocomplete-prompt": "^3.0.1",
        "rxjs": "^6.5.4",
        "rxjs-tslint": "^0.1.8",
        "tslib": "^2.0.0",
        "zone.js": "~0.14.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.3.5",
        "@angular/cli": "^17.3.5",
        "@angular/compiler-cli": "^17.3.5",
        "@angular/language-service": "^17.3.5",
        "@types/jasmine": "~3.6.0",
        "@types/jasminewd2": "^2.0.6",
        "@types/node": "^12.11.1",
        "angular-spec-generator": "^1.1.0",
        "codelyzer": "^0.0.28",
        "firebase-tools": "^13.7.4",
        "husky": "^0.14.3",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-cli": "^2.0.0",
        "karma-coverage": "~2.0.3",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "karma-trx-reporter": "^0.4.3",
        "lint-staged": "^4.3.0",
        "prettier": "^1.18.2",
        "protractor": "^7.0.0",
        "puppeteer": "^1.18.1",
        "stylelint": "^16.4.0",
        "stylelint-config-standard": "^18.3.0",
        "ts-node": "^7.0.1",
        "tslint": "~6.1.0",
        "typescript": "5.4.5",
        "webpack-bundle-analyzer": "^4.10.2"
    }
}
